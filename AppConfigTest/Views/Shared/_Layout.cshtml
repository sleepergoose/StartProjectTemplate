<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div>
        <div class="container-fluid bg-info card-body">
            <div class="row">
                <div class="col-sm-7">
                    <h1 class="text-light font-weight-bold" style="font-family: sans-serif">Products</h1>
                </div>
                <div class="col-sm-5 ">
                    <div class="bg-info text-light card-body">
                        @await Component.InvokeAsync("ComboComponent")
                    </div>
                </div>
            </div>
        </div>
        <br />
        @RenderBody()
        await Component.InvokeAsync("PageSize"); 
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
